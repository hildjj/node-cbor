      "optional": true
    }
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "eslint": "^7.19.0",
    "light-server": "^2.9.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2"
  },
  "license": "MIT"
}
