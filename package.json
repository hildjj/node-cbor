    "email": "joe-github@cursive.net"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules coverage .nyc_output packages/*/node_modules packages/*/coverage pacakges/*/.nyc_output",
    "lint": "eslint packages/*/{src,lib,test,bin}/**.js",
    "test": "ava packages/*/test/*.ava.js",
    "yi": "yarn install --no-lockfile",
    "build": "pnpm -r build",
    "coverage": "nyc -r lcov npm test",
    "predeploy": "rm -rf docs/example && mkdir -p docs/example && (cd packages/cbor-web; npm run build)",
    "deploy": "pnpm -r deploy"
  },
